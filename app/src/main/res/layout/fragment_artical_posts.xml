<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_splash"
    android:orientation="vertical"
    tools:context=".ui.fragment.homscreen.ArticalPostsFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/album_dp_50"
       android:layout_margin="@dimen/album_dp_10"
       android:background="@drawable/fram_articl_post"
       android:elevation="@dimen/elevation"
       android:orientation="horizontal">

       <Spinner
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_marginBottom="8dp"
           android:layout_marginStart="8dp"
           android:layout_marginTop="8dp"
          />
       <SearchView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/album_dp_10"
           />

</LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/articalposts_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</LinearLayout>