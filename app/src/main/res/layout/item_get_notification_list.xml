<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notificationAdapterLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#9AF1F1F1"
    android:orientation="vertical"
    android:layout_margin="12dp"
    tools:ignore="ContentDescription">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/durban_White"
        app:cardCornerRadius="@dimen/album_dp_4"
        android:layout_marginBottom="@dimen/album_dp_4"
        android:layout_marginTop="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/time_notification_Adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="TextView" />

            <TextView
                android:id="@+id/title_notification_Adapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/image_notification"
                android:layout_toEndOf="@+id/time_notification_Adapter" />

            <ImageView
                android:id="@+id/image_notification"
                android:layout_width="@dimen/album_dp_30"
                android:layout_height="@dimen/album_dp_30"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_siting_notivication" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>