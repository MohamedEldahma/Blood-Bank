<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="8dp"
    android:elevation="@dimen/elevation"
    android:background="@android:color/white"
    android:padding="8dp"

    >

    <TextView
    android:id="@+id/text_blood_typ"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:background="@drawable/oval_imag_blood_typ"
    android:padding="8dp"
    android:text="B+"
    android:elevation="1dp"
    android:layout_centerInParent="true"
    android:textColor="@android:color/black"
    android:textSize="@dimen/album_dp_50"
    android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/id_layout_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_toStartOf="@id/text_blood_typ"
        android:layout_toEndOf="@id/id_layo_1"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="16dp"
        android:weightSum="3"
        >

        <TextView
            android:id="@+id/patient_text_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/Person_name" />

        <TextView
            android:id="@+id/hospital_text_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/Person_hospital_address" />

        <TextView
            android:id="@+id/city_text_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/person_city" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/id_layo_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:weightSum="2">

    <Button
        android:id="@+id/detail_botton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorGray"
        android:text="@string/person_details" />

    <Button
        android:id="@+id/contact_botton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="#00C853"
        android:drawableTint="@android:color/white"
        android:text="@string/conect"
        android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>