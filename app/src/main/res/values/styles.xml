<resources xmlns:tools="http://schemas.android.com/tools">


<!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="make_request">
        <item name="android:elevation" tools:targetApi="lollipop">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/album_sp_16</item>
        <item name="android:textColor">#FF2B2B2B</item>
        <item name="android:layout_height">@dimen/album_dp_50</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:paddingRight">@dimen/album_dp_6</item>
        <item name="android:paddingLeft">@dimen/album_dp_6</item>


    </style>


</resources>
